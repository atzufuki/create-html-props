{
  "tasks": {
    "serve": "deno run --allow-net --allow-read --allow-sys jsr:@std/http/file-server public/",
    "bundle": "deno bundle --watch --platform browser --output public/bundle.js src/main.ts",
    "dev": {
      "dependencies": ["bundle", "serve"]
    }
  },
  "imports": {
    "@html-props/core": "jsr:@html-props/core@^0.5.0",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/http": "jsr:@std/http@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.2"
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom"
    ],
    "noImplicitOverride": false
  }
}
